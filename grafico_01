# Crea los gráficos a partir de una tabla de datos
# hasta el momento solo para vocales femeninas

tab = selected("Table")

tab_f = Extract rows where column (text): "sexo", "is equal to", "f"

select tab

tab_f_a = Extract rows where column (text): "vocalFonol", "is equal to", "a"
select tab
tab_f_e = Extract rows where column (text): "vocalFonol", "is equal to", "e"
select tab
tab_f_i = Extract rows where column (text): "vocalFonol", "is equal to", "i"
select tab
tab_f_o = Extract rows where column (text): "vocalFonol", "is equal to", "o"
select tab
tab_f_u = Extract rows where column (text): "vocalFonol", "is equal to", "u"


# VOCAL A

select tab_f_a
nfilas_a = Get number of rows
mitad_a = (round(33/2))-1
tab_f_a_first = Extract rows where column (number): "vocal", "less than", mitad_a
select tab_f_a
tab_f_a_second = Extract rows where column (number): "vocal", "greater than or equal to", mitad_a

select tab_f_a_first
f1_a_first = Get mean: "F1"
f2_a_first = Get mean: "F2"

select tab_f_a_second
f1_a_second = Get mean: "F1"
f2_a_second = Get mean: "F2"


