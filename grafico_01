plus tab_f_e_first
plus tab_f_i_first
plus tab_f_o_first
plus tab_f_u_first

tab_first = Append

select tab_f_a_second
plus tab_f_e_second
plus tab_f_i_second
plus tab_f_o_second
plus tab_f_u_second

tab_second = Append

pause
